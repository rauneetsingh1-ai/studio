{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile on the CollabX platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the UserProfile entity (matches Firebase Auth UID)."
        },
        "name": {
          "type": "string",
          "description": "User's display name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile photo.",
          "format": "uri"
        },
        "college": {
          "type": "string",
          "description": "User's college or university."
        },
        "year": {
          "type": "string",
          "description": "User's academic year."
        },
        "roles": {
          "type": "array",
          "description": "List of roles the user is interested in (e.g., 'Frontend', 'Backend').",
          "items": {
            "type": "string"
          }
        },
        "skills": {
          "type": "array",
          "description": "List of skills possessed by the user.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "level": {
                "type": "string",
                "enum": ["Beginner", "Intermediate", "Expert"]
              },
              "years": {
                "type": "number"
              }
            }
          }
        },
        "availability": {
          "type": "object",
          "description": "User's availability information.",
          "properties": {
            "days": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "from": {
              "type": "string"
            },
            "to": {
              "type": "string"
            },
            "tz": {
              "type": "string"
            }
          }
        },
        "quiz": {
          "type": "object",
          "description": "User's quiz scores and overall level.",
          "properties": {
            "domainScores": {
              "type": "object"
            },
            "overall": {
              "type": "string"
            }
          }
        },
        "location": {
          "type": "object",
          "description": "User's geographical location.",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            },
            "city": {
              "type": "string"
            }
          }
        },
        "badges": {
          "type": "array",
          "description": "List of badges or achievements earned by the user.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "date": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the user profile was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the user profile was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "createdAt"
      ]
    },
    "Team": {
      "title": "Team",
      "type": "object",
      "description": "Represents a team of users for a project.",
      "properties": {
        "name": {
          "type": "string"
        },
        "createdBy": {
          "type": "string",
          "description": "UID of the user who created the team."
        },
        "members": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uid": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["open", "closed"]
        },
        "techStack": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "projectIdea": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "summary": {
              "type": "string"
            }
          }
        }
      },
      "required": ["name", "createdBy", "members"]
    },
    "Request": {
      "title": "Request",
      "type": "object",
      "description": "Represents a request from a user to join a team or connect with another user.",
      "properties": {
        "fromUid": {
          "type": "string",
          "description": "The UID of the user sending the request."
        },
        "toUid": {
          "type": "string",
          "description": "The UID of the user receiving the request."
        },
        "toTeamId": {
          "type": "string",
          "description": "The ID of the team receiving the request."
        },
        "roleRequested": {
          "type": "string",
          "description": "The role the user is requesting to have."
        },
        "status": {
          "type": "string",
          "description": "The status of the request.",
          "enum": ["pending", "accepted", "rejected"]
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the request was created.",
          "format": "date-time"
        }
      },
      "required": [
        "fromUid",
        "status",
        "createdAt"
      ]
    },
    "ChatRoom": {
      "title": "ChatRoom",
      "type": "object",
      "description": "Represents a chat room for direct messages or teams.",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["team", "dm"]
        },
        "participants": {
          "type": "object",
          "description": "Map of participant UIDs to true for easy rule checking.",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["type", "participants", "lastUpdated"]
    },
    "ChatMessage": {
      "title": "ChatMessage",
      "type": "object",
      "description": "Represents a single message within a chat room.",
      "properties": {
        "from": {
          "type": "string",
          "description": "UID of the user who sent the message."
        },
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the message was sent.",
          "format": "date-time"
        },
        "attachments": {
          "type": "array",
          "description": "Array of storage paths for any attachments.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["from", "text", "createdAt"]
    },
    "KanbanTask": {
      "title": "Kanban Task",
      "type": "object",
      "description": "A single task within a project's Kanban board.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "assignedTo": { "type": "string", "description": "UID of the assigned user." },
        "status": { "type": "string", "description": "The column ID the task is in." },
        "dueDate": { "type": "string", "format": "date-time"}
      },
      "required": ["title", "status"]
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores public and private user profile data. Document ID must match the authenticated user's UID."
        }
      },
      {
        "path": "/teams/{teamId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Team"
          },
          "description": "Stores information about a specific team."
        }
      },
      {
        "path": "/requests/{requestId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Request"
          },
          "description": "Stores requests from users to join teams or connect with other users."
        }
      },
      {
        "path": "/chatRooms/{roomId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/ChatRoom"
          },
          "description": "Stores metadata for a chat room. Access is controlled by the 'participants' map."
        }
      },
      {
        "path": "/chatRooms/{roomId}/messages/{messageId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/ChatMessage"
          },
          "description": "Stores all messages for a specific chat room. Inherits access rules from the parent chat room."
        }
      },
      {
        "path": "/projects/{projectId}",
        "definition": {
          "schema": {
            "type": "object",
            "properties": {
              "teamId": { "type": "string" },
              "columns": { "type": "array", "items": {"type": "object", "properties": {"id":{"type": "string"}, "title": {"type": "string"}, "order": {"type": "number"}}}}
            }
          },
          "description": "Represents a Kanban board for a team project."
        }
      },
       {
        "path": "/projects/{projectId}/tasks/{taskId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/KanbanTask"
          },
          "description": "Stores individual tasks for a project's Kanban board."
        }
      }
    ]
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  }
}