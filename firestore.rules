rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users: read own doc fully, public limited read
    match /users/{uid} {
      allow read: if request.auth != null;
      // public reading disabled
      allow create: if request.auth.uid == uid;
      allow update: if request.auth.uid == uid;
    }

    match /teams/{teamId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && exists(/databases/$(database)/documents/teams/$(teamId)) && resource.data.createdBy == request.auth.uid;
      // restrict membership modifications via Cloud Functions or validate members array
    }

    match /requests/{reqId} {
      allow create: if request.auth != null && request.resource.data.fromUid == request.auth.uid;
      allow read: if request.auth != null && (resource.data.fromUid == request.auth.uid || (resource.data.toTeamId != null && get(/databases/$(database)/documents/teams/$(resource.data.toTeamId)).data.createdBy == request.auth.uid));
      allow update: if request.auth != null && (resource.data.toTeamId != null && get(/databases/$(database)/documents/teams/$(resource.data.toTeamId)).data.createdBy == request.auth.uid);
    }

    // chat rooms: participants only
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      match /messages/{msgId} {
        allow create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/chatRooms/$(roomId)).data.participants;
      }
    }
  }
}
